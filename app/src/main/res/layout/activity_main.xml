<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:gravity="end|bottom"
            android:textSize="28sp"
            android:hint="@string/TestView_name"
            android:background="@drawable/back_dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/bt_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="50dp"
            android:text="@string/bt_C" />

        <Button
            android:id="@+id/bt_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_C"
            android:layout_alignBottom="@+id/bt_C"
            android:layout_toEndOf="@+id/bt_C"
            android:layout_toRightOf="@+id/bt_C"
            android:text="@string/bt_div" />

        <Button
            android:id="@+id/bt_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_multiply"
            android:layout_alignBaseline="@+id/bt_div"
            android:layout_alignBottom="@+id/bt_div"
            android:layout_toRightOf="@+id/bt_div"
            android:layout_toEndOf="@+id/bt_div" />

        <Button
            android:id="@+id/bt_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bt_C"
            android:text="@string/bt_7" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_8"
            android:layout_alignBaseline="@+id/bt_7"
            android:layout_alignBottom="@+id/bt_7"
            android:layout_toRightOf="@+id/bt_C"
            android:layout_toEndOf="@+id/bt_C" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_8"
            android:layout_toEndOf="@+id/bt_div"
            android:layout_toRightOf="@+id/bt_div"
            android:text="@string/bt_9" />

        <Button
            android:id="@+id/bt_DEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bt_DEL"
            android:layout_alignBaseline="@+id/bt_multiply"
            android:layout_alignBottom="@+id/bt_multiply"
            android:layout_toRightOf="@+id/bt_multiply"
            android:layout_toEndOf="@+id/bt_multiply" />

        <Button
            android:id="@+id/bt_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_add"
            android:layout_below="@+id/bt_multiply"
            android:layout_toEndOf="@+id/bt_9"
            android:layout_toRightOf="@+id/bt_9"
            android:text="@string/bt_sub" />

        <Button
            android:id="@+id/bt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_7"
            android:layout_toLeftOf="@+id/bt_8"
            android:layout_toStartOf="@+id/bt_8"
            android:text="@string/bt_4" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_4"
            android:layout_toEndOf="@+id/bt_7"
            android:layout_toRightOf="@+id/bt_7"
            android:text="@string/bt_5" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_9"
            android:layout_toEndOf="@+id/bt_5"
            android:layout_toRightOf="@+id/bt_5"
            android:text="@string/bt_6" />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_6"
            android:layout_toEndOf="@+id/bt_9"
            android:layout_toRightOf="@+id/bt_9"
            android:text="@string/bt_add" />

        <Button
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_4"
            android:layout_toLeftOf="@+id/bt_5"
            android:layout_toStartOf="@+id/bt_5"
            android:text="@string/bt_1" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_4"
            android:layout_toEndOf="@+id/bt_4"
            android:layout_toRightOf="@+id/bt_4"
            android:text="@string/bt_2" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_6"
            android:layout_toEndOf="@+id/bt_2"
            android:layout_toRightOf="@+id/bt_2"
            android:text="@string/bt_3" />

        <Button
            android:id="@+id/bt_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bt_1"
            android:text="@string/bt_per" />

        <Button
            android:id="@+id/bt_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_1"
            android:layout_toLeftOf="@+id/bt_3"
            android:layout_toStartOf="@+id/bt_3"
            android:text="@string/bt_0" />

        <Button
            android:id="@+id/bt_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_0"
            android:layout_toEndOf="@+id/bt_2"
            android:layout_toRightOf="@+id/bt_2"
            android:text="@string/bt_point" />

        <Button
            android:id="@+id/bt_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_6"
            android:layout_toEndOf="@+id/bt_3"
            android:layout_toRightOf="@+id/bt_3"
            android:text="@string/bt_equals"
            android:layout_alignBottom="@+id/bt_point" />
    </RelativeLayout>
